# ===========================================
# DIFFsense Backend - Environment Variables
# ===========================================

# --- Server Configuration ---
PORT=3001
NODE_ENV=development
# NODE_ENV=production  # 本番環境ではこちらを使用

# --- Firebase Admin SDK ---
FIREBASE_PROJECT_ID=diffsense-9a718
FIREBASE_CLIENT_EMAIL=YOUR_CLIENT_EMAIL_HERE
FIREBASE_PRIVATE_KEY="YOUR_PRIVATE_KEY_HERE"
FIREBASE_STORAGE_BUCKET=diffsense-9a718.firebasestorage.app

# --- Google Gemini AI ---
GEMINI_API_KEY=YOUR_GEMINI_API_KEY_HERE

# --- SendGrid Email ---
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY_HERE
FROM_EMAIL=noreply@diffsense.com
FROM_NAME=DIFFsense

# --- URLs ---
# 開発環境
DASHBOARD_URL=http://localhost:3000/dashboard
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000
# 本番環境
# DASHBOARD_URL=https://diffsense.netlify.app/dashboard
# ALLOWED_ORIGINS=https://diffsense.netlify.app

# --- Rate Limiting ---
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# --- PDF Upload ---
MAX_FILE_SIZE_MB=50

# --- PayPal Subscription ---
# sandbox用
PAYPAL_CLIENT_ID=YOUR_SANDBOX_CLIENT_ID
PAYPAL_CLIENT_SECRET=YOUR_SANDBOX_CLIENT_SECRET
PAYPAL_MODE=sandbox
# 本番用
# PAYPAL_CLIENT_ID=YOUR_LIVE_CLIENT_ID
# PAYPAL_CLIENT_SECRET=YOUR_LIVE_CLIENT_SECRET
# PAYPAL_MODE=live

# PayPal Plan IDs (PayPal Dashboardで作成後に設定)
PAYPAL_PLAN_STARTER=P-XXXXXXXXXXXXXXXXXXXXXXXXX
PAYPAL_PLAN_BUSINESS=P-XXXXXXXXXXXXXXXXXXXXXXXXX
PAYPAL_PLAN_PRO=P-XXXXXXXXXXXXXXXXXXXXXXXXX

# PayPal Webhook (本番環境で必須)
PAYPAL_WEBHOOK_ID=YOUR_WEBHOOK_ID

# --- Development Options ---
# 開発時のみ: Firebase認証をバイパス (本番では必ず false)
AUTH_BYPASS=true
